proc Main; 					// Demonstrates creating a procedure;
	set 0 World; 				// Set buffer block 0 to string "World";
	say %$YHello, %^0!; 			// Print yellow-colored "Hello, World!" string, with %⁣ ^0 accessing buffer block 0;
	set 0 you; 				// Set buffer block 0 to string "you", replacing the previous "World" string;
	say %$LPleased to see %^0 again!; 	// Print lime-colored "Pleased to see you again!" string with %⁣ ^0 accessing buffer block 0;
	free 0; 				// Free buffer block 0, deleting its value;
	mem; 					// Display memory buffer to make sure all blocks are free;
end; 						// Finishes the procedure code;
call Main; 					// Calls the procedure code, initiating all commands inside;
free Main; 					// Free the procedure;
